<div class="school">
    <h1><%= school.name %></h1>
    <hr>
    <br>

    <p class="name"><%= school.name %></p>
    <p class="address"><%= school.address %></p>
    <p class="contact"><%= school.telephone %></p>

    <br>

    <table class="table">
        <thead>
            <th>#</th>
            <th>Nome</th>
            <th>Ano</th>
            <th>Capacidade</th>
        </thead>
        <tbody>
            <% if school.classrooms.empty? then %>
                <p>Sem turmas cadastradas.</p>
            <% else %>
                <% school.classrooms.each do |classroom| %>
                    <tr>
                        <td><%= classroom.id %></td>
                        <td><%= classroom.name %></td>
                        <td><%= classroom.year %></td>
                        <td><%= classroom.capacity %></td>
                    </tr>
                <% end %>
            <% end %>
            <tr>
                <%= link_to "Adicionar turma", new_school_classroom_url(school) %>
            </tr>
        </tbody>
    </table>

    <br>

    <footer class="actions">
        <%= link_to "Voltar", schools_url, class: "button active" %>
        <%= link_to "Editar", edit_school_url(school), class: "button normal" %>
        <%= link_to "Excluir", school, class: "button delete", data: { "turbo-method": "delete" } %>
    </footer>
</div>